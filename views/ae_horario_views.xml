<odoo>
    <data>
        <!-- Vista de Lista (list View) para Horario -->
        <record id="view_agenda_horario_list" model="ir.ui.view">
            <field name="name">agenda.horario.list</field>
            <field name="model">agenda.horario</field>
            <field name="arch" type="xml">
                <list string="Horarios" editable="bottom">
                    <field name="hora_inicio"/>
                    <field name="hora_fin"/>
                </list>
            </field>
        </record>

        <!-- Vista de Formulario (Form View) para Horario -->
        <record id="view_agenda_horario_form" model="ir.ui.view">
            <field name="name">agenda.horario.form</field>
            <field name="model">agenda.horario</field>
            <field name="arch" type="xml">
                <form string="Horario">
                    <sheet>
                        <group>
                            <field name="hora_inicio"/>
                            <field name="hora_fin"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
